{
	"name": "better-analytics",
	"private": true,
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:generate": "turbo db:generate --filter=./packages/db",
		"db:push": "turbo db:push --filter=./packages/db",
		"db:studio": "turbo db:studio --filter=./packages/db",
		"db:migrate": "turbo db:migrate --filter=./packages/db",
		"db:deploy": "turbo db:deploy --filter=./packages/db",
		"auth:generate": "npx @better-auth/cli@latest generate --config packages/auth/src/auth.ts --output packages/db/src/drizzle/schema.ts --y"
	},
	"dependencies": {
		"@clickhouse/client": "^1.11.2",
		"@types/pg": "^8.15.4",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.2",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.0.0"
	},
	"workspaces": [
		"apps/*",
		"packages/*",
		"tooling/*"
	],
	"packageManager": "bun@1.2.17"
}