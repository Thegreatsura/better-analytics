{
	"extends": "@better-analytics/typescript/base.json",
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"types": [
			"bun-types",
			"autumn-js"
		],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"baseUrl": "."
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}